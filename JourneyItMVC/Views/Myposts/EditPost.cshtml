@using Journey.Model.Requests
@model CreatePostRequest

@{
    ViewData["Title"] = "Edit Post";
}

<style>
    .bold-label {
        font-weight: bold;
        color: black;
    }

    .submit-button {
        margin-top: 20px;
        background-color: #3db1c5;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 23px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .submit-button:hover {
            background-color: cadetblue;
        }
</style>

<h2>Edit Post</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form  method="post" >
                
                <div class="form-group">
                    <label asp-for="Texts" class="bold-label"></label>
                    <textarea asp-for="Texts" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Texts" class="text-danger"></span>
                </div>
               
                <div class="form-group">
                    <button type="edit" class="submit-button">Edit</button>
                </div>
            </form>
        </div>
    </div>
</div>
