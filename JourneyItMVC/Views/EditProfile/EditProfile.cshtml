@using Journey.Model.Requests
@model EditProfileRequest

@{
    ViewData["Title"] = "Create Post";
}

<style>
    .bold-label {
        font-weight: bold;
        color: black;
    }

    .submit-button {
        margin-top: 20px;
        background-color: #3db1c5;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 23px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .submit-button:hover {
            background-color: cadetblue;
        }
</style>

<h2>Edit Profile</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="EditProfile" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Name" class="bold-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="bold-label"></label>
                    <textarea asp-for="Email" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image" class="bold-label"></label>
                    <input type="file" asp-for="Image" class="form-control-file" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
               
                <div class="form-group">
                    <button type="submit" class="submit-button">Edit</button>
                </div>
            </form>
        </div>
    </div>
</div>
