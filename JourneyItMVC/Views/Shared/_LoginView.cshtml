@using Journy.Model

@inject IHttpContextAccessor _httpContext

@if (_httpContext.HttpContext.User.Identity.IsAuthenticated)
{
    @_httpContext.HttpContext.User.FindFirst(r => r.Type == TokenClaimsConstant.Username).Value <a class="nav-link text-dark" href="/Account/Logout">  </a>
}
else
{
    <a class="nav-link text-#3db1c5" href="/Account/Login"> </a>
}