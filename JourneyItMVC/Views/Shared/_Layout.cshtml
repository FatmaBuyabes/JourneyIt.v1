<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JourneyItMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/JourneyItMVC.styles.css" asp-append-version="true" />

    <style>
        /* Custom CSS for enhanced design */

        /* Font color set to blue */
        a {
            color: cadetblue;
        }

        .navbar-brand img {
            max-height: 80px; 
        }

        .nav-link {
            color: cadetblue; 
            font-weight: bold;
            transition: color 0.3s ease; 
        }

        .navbar-light .navbar-nav .nav-link {
            color: #14a4bc;
        }

        .nav-item .nav-link {
            color: #14a4bc; /* Change the color to cadetblue */
            font-weight: 700;
            transition: color 0.3s ease; /* Smooth transition on hover */
            font-size: 18px;
        }


        /* Profile dropdown styling */
        .dropdown-menu {
            background-color: #f8f9fa; /* Light gray background */
            border: none;
        }

        a[b-ax76t4nvcb] {
            color: #14a4bc;
        }
        
     
        .profile-bright {
            filter: brightness(0.7); /* Example: increase brightness by 20% */
            transition: filter 0.3s ease; /* Smooth transition effect */
        }



            .dropdown-menu .dropdown-item {
                color: #14a4bc; /* Dark text color */
            }

                .dropdown-menu .dropdown-item:hover {
                    background-color: #e2e6ea; /* Light gray background on hover */
                }

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="/Images/Logo.png" alt="Logo" style="height: 97px; width: 82px;">
                </a>

                <!-- Toggler Button -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

               
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Feed" asp-action="Explore">Explore</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Pins</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="AddPost" asp-action="Create">Add Post</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a>
                        </li>
                    </ul>

                    <h6>
                        @(await Html.PartialAsync("_LoginView"))
                    </h6>
                    <div class="dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" id="profileDropdown" data-bs-toggle="dropdown" aria-expanded="false">                          
                            <img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_960_720.png" alt="Profile Picture" class="rounded-circle" style="width: 40px; height: 40px;">
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="profileDropdown">
                            <!-- Profile -->
                            <li><a class="dropdown-item" href="/UserProfile/Index">Profile</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <!-- Login -->
                            <li><a class="dropdown-item" href="/Account/Login">Login</a></li>
                            <!-- Sign Up -->
                            <!-- Sign Up -->
                            <li><a class="dropdown-item" href="/Account/SignUp">Sign Up</a></li>

                            <li><hr class="dropdown-divider"></li>
                            <!-- Logout -->
                            <li><a class="dropdown-item" href="/Account/Logout">Logout</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()

        </main>

        <script>
            // JavaScript to toggle brightness class on profile picture click
            document.addEventListener("DOMContentLoaded", function () {
                var profilePicture = document.querySelector("#profileDropdown img");

                profilePicture.addEventListener("click", function () {
                    this.classList.toggle("profile-bright");
                });
            });
        </script>

    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - JourneyItMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
