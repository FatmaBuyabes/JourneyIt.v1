<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JourneyItMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/JourneyItMVC.styles.css" asp-append-version="true" />

    <style>
        /* Custom CSS for enhanced design */

        /* Font color set to blue */
        a {
            color: cadetblue;
        }

        .dropdown-menu {
            left: -67px !important;
        }
        h6{
            color: white;
        }

        .flo {
            height: 200px;
        }

        a[b-ax76t4nvcb] {
            color: white;
        }

        .nav-link:focus, .nav-link:hover {
            color: #14a4bc;
        }

        .with-background-image {
            background-image: url("https://i.redd.it/4z34o5wrt46a1.jpg");
            background-size: cover; /* Cover the entire navbar */
            background-position: center; /* Center the background image */
            height: 200px;
        }

        .navbar {
            background-color: #fff; /* Navbar background color */
        }

        .navbar-brand img {
            max-height: 100px;
        }

        .navbar-light .navbar-nav .nav-link {
            color: white;
        }

        .nav-item .nav-link {
            color: #14a4bc; /* Navbar link color */
            font-weight: 700;
            font-size: 18px;
            position: relative; /* Required for pseudo-element */
            transition: color 0.3s ease; /* Smooth transition on color change */
        }

            /* Create a pseudo-element for the animation */
            .nav-item .nav-link::before {
                content: '';
                position: absolute;
                width: 100%;
                height: 2px;
                bottom: -2px; /* Position the pseudo-element below the link */
                left: 0;
                background-color: transparent; /* Initial color of the pseudo-element */
                transition: background-color 0.3s ease; /* Smooth transition on background-color change */
            }



            /* Animation effect when hovering over the navbar links */
            .nav-item .nav-link:hover::before {
                background-color: #14a4bc; /* Change the background color on hover */
            }


        .navbar-light .navbar-nav .nav-link:hover {
            backdrop-filter: blur(10px); /* Add a blur effect on hover */
            background-color: rgba(255, 255, 255, 0.1);
            color: black;
        }

        /* Profile dropdown styling */
        .dropdown-menu {
            background-color: rgba(0, 0, 0, 0.4);
            border: 1px solid #fff;
            padding: 0.5rem 0; /* Padding */
            font-size: 16px; /* Font size */
        }

            .dropdown-menu .dropdown-item {
                color: white;
            }

                .dropdown-menu .dropdown-item:hover {
                    background-color: rgba(0, 0, 0, 0.7);
                }


        .profile-bright {
            filter: brightness(0.7); /* Increase brightness on profile picture click */
            transition: filter 0.3s ease; /* Smooth transition effect */
        }

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3 with-background-image">
            <div class="container-fluid flo">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="/Images/LogoW.png" alt="Logo" style="height: 140px; width: 100px;">
                </a>

                <!-- Toggler Button -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>


                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Feed" asp-action="Explore">Explore</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="PinnedPosts" asp-action="PinnedPosts">Pins</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="AddPost" asp-action="Create">Add Post</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Myposts" asp-action="Myposts">My Posts</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a>
                        </li>
                    </ul>

                    <h6>
                        @(await Html.PartialAsync("_LoginView"))
                    </h6>
                    <div class="dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" id="profileDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_960_720.png" alt="Profile Picture" class="rounded-circle" style="width: 40px; height: 40px;">
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="profileDropdown">
                            <!-- Profile -->
                            <li><a class="dropdown-item" href="/UserProfile/Index">Profile</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <!-- Login -->
                            <li><a class="dropdown-item" href="/Account/Login">Login</a></li>
                            <!-- Sign Up -->
                            <!-- Sign Up -->
                            <li><a class="dropdown-item" href="/Account/SignUp">Sign Up</a></li>

                            <li><hr class="dropdown-divider"></li>
                            <!-- Logout -->
                            <li><a class="dropdown-item" href="/Account/Logout">Logout</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - JourneyItMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        // JavaScript to toggle brightness class on profile picture click
        document.addEventListener("DOMContentLoaded", function () {
            var profilePicture = document.querySelector("#profileDropdown img");

            profilePicture.addEventListener("click", function () {
                this.classList.toggle("profile-bright");
            });
        });
    </script>
</body>
</html>
