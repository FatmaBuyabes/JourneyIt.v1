@model JourneyItMVC.Models.SignUpRequest

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Sign Up</h2>
                    <form asp-action="RegisterPost" method="post">
                        <div class="form-group">
                            <label asp-for="Username" class="mb-1">Username</label>
                            <input asp-for="Username" class="form-control" placeholder="Enter your username" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="mb-1">Email</label>
                            <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="mb-1">Password</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                        </div>
                        <button type="submit" class="btn btn-primary btn-block mt-4">Sign Up</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
